<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="225dp"
    android:layout_height="match_parent"
    android:padding="8dp" >

<View
    android:id="@+id/category"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:background="#FF0000" />

<ImageView
    android:id="@+id/owner_bg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/category"
    android:layout_alignLeft="@+id/category" />

<ImageView
    android:id="@+id/owner"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/category"
    android:layout_alignLeft="@+id/category" />

<TextView
    android:id="@+id/txtPrice"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/txtName"
    android:layout_centerHorizontal="true"
    android:text="100 eV"
    android:textAppearance="?android:attr/textAppearanceLarge" />

<TextView
    android:id="@+id/txtName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:lines="2"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:ellipsize="end"
    android:fontFamily="sans-serif-light"
    android:text="Large Hadron Collider"
    android:gravity="center_horizontal"
    android:textSize="28sp" />

	<LinearLayout
	    android:id="@+id/houses"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/category"
	    android:layout_marginBottom="16dp"
	    android:layout_centerInParent="true" >

	    <ImageView
	        android:id="@+id/imgHouse1"
	        android:layout_width="36dp"
	        android:layout_height="36dp"
	        android:src="@drawable/ic_house1" />

	    <ImageView
	        android:id="@+id/imgHouse2"
	        android:layout_width="36dp"
	        android:layout_height="36dp"
	        android:src="@drawable/ic_house2" />

	    <ImageView
	        android:id="@+id/imgHouse3"
	        android:layout_width="36dp"
	        android:layout_height="36dp"
	        android:src="@drawable/ic_house3" />

	    <ImageView
	        android:id="@+id/imgHouse4"
	        android:layout_width="36dp"
	        android:layout_height="36dp"
	        android:src="@drawable/ic_house4" />

	    <ImageView
	        android:id="@+id/imgHotel"
	        android:layout_width="36dp"
	        android:layout_height="36dp"
	        android:src="@drawable/ic_hotel" />
	</LinearLayout>

</RelativeLayout>