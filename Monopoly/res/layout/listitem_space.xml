<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top" >

        <View
            android:id="@+id/color"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="#FF0000" />

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Name"
            android:layout_weight="1"
            android:textSize="18sp" />

        <ToggleButton
            android:id="@+id/mortgage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="Hypothek (5.000 eV)"
            android:textOn="Hypothek aufgenommen" />

    </LinearLayout>
    
    <TextView
        android:id="@+id/txtRent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Miete" />

    <TextView
        android:id="@+id/txtHousePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="1 Haus/Hotel kostet" />

    <LinearLayout
        android:id="@+id/houses"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp" >

        <ImageView
            android:id="@+id/imgHouse1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_house1" />

        <ImageView
            android:id="@+id/imgHouse2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_house2" />

        <ImageView
            android:id="@+id/imgHouse3"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_house3" />

        <ImageView
            android:id="@+id/imgHouse4"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_house4" />

        <ImageView
            android:id="@+id/imgHotel"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_hotel" />

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="+" />

        <Button
            android:id="@+id/btnMinus"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="-" />
    </LinearLayout>

</LinearLayout>
